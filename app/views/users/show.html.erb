<h1><%= @user.username %>さんのhome</h1>

<% unless current_user == @user %>
  <% if current_user.following?(@user) %>
    <%= form_for(current_user.user_relationships.find_by(follow_id: @user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.submit 'Unfollow', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.user_relationships.build) do |f| %>
      <%= hidden_field_tag :follow_id, @user.id %>
      <%= f.submit 'Follow', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>

<p>フォロー数<%= @followings.size %>  / フォロワー数<%= @followers.size %></p>

<%= form_with model: @new_memo do |f|  %>
  <%= f.text_area :content %>
  <%= f.submit "share new memo" %>
<% end %>

<p>自分とfollowしている人のmemos</p>
<ul class="all_memos">
  <%= render @all_memos %>
</ul>





